<% content_for :title, "Create User" %>

<div class="container mt-4">
  <h1 class="text-center mb-5">Crear un nuevo usuario</h1>

  <%= form_with(model: @user, local: true) do |form| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@user.errors.count, "error") %> prohibieron guardar este usuario:</h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="w-25 mx-auto">
    <div class="form-group text-center mb-4">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group text-center mb-4">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group text-center mb-4">
      <%= form.label :age, class: "form-label" %>
      <%= form.number_field :age, class: "form-control" %>
    </div>

    <div class="form-group text-center">
      <%= form.submit "Crear Usuario", class: "btn btn-primary col-12" %>
    </div>
  </div>
  <% end %>
</div>
